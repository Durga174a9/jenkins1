pipeline{
    agent any

    stages{
        stage("1st stage"){
            steps{
                echo "hello from 1st"
            }
        }

        stage("2nd stage"){
            steps{
                echo "hello from 2nd"
            }
        }

        stage("3rd stage"){
            steps{
                echo "hello from 3rd"
            }
        }
    }
}